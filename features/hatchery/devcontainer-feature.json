{
  "id": "hatchery",
  "version": "1.2.0",
  "name": "Hatchery Drone Setup",
  "description": "SSH keys, Tailscale join, git/gh credential helpers",
  "installsAfter": [
    "ghcr.io/devcontainers/features/github-cli"
  ],
  "postStartCommand": "/usr/local/bin/hatchery-post-start",
  "mounts": [
    {
      "source": "ssh-host-keys-${devcontainerId}",
      "target": "/var/lib/hatchery/host-keys",
      "type": "volume"
    }
  ]
}
